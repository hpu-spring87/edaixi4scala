<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@mipmap/coupon_bg"
    android:gravity="center_vertical"
    android:padding="16dp"
    tools:context=".TradingActivityBak">


    <ImageView
        android:id="@+id/iv_coupon_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:src="@drawable/empty_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_coupon_item"
        android:orientation="vertical"
        android:paddingLeft="16dp">


        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券名字"
            android:textColor="#795548" />

        <TextView
            android:id="@+id/tv_coupon_xianzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="优惠券名字"
            android:textColor="#795548" />

        <TextView
            android:id="@+id/tv_coupon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="优惠券名字"
            android:textColor="#795548" />

        <TextView
            android:id="@+id/tv_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="优惠券名字"
            android:textColor="#795548" />


    </LinearLayout>


</RelativeLayout>
